---
import pp from "../images/pp.png"
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <img src={pp.src} draggable="false" id="me" alt="Me">
    <h2>~ Esteban Rattier ~</h2>
    <p>I'm a junior developer, currently a student in a dev school. Take a look at my <a href="https://github.com/Kaz-OS/resume/releases/latest/download/Esteban_Rattier_CV.pdf" target="_blank">resume</a>.
        If I don't reply, i'm just coding, don't worry...<br /></p>
    <div id="h-sep" role="separator" aria-orientation="horizontal"></div>
    <section id="workspace">
        <section id="contact">
            <h3>Contacts:</h3>
            <a href="https://linkedin.com/in/estebanrattier" target="_blank">LinkedIn</a>
            <a href="mailto:rattier.esteban.pro@gmail.com">Mail</a>
        </section>
        <section id="project">
            <h3>Projects:</h3>
            <a href="https://github.com/Kaz-OS" target="_blank">GitHub</a>
        </section>
    </section>

</Layout>

<style>

@import url('https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500&display=swap');

* {
    font-family: 'Satoshi', sans-serif;
}

body {
    display: flex;
    flex-direction: column;
    max-width: 29rem;
    padding: 0 1rem;
    box-sizing: border-box;
}

::selection {
  background: #bbb3ff81;
}


img {
    margin-bottom: 1rem;
    align-items: center;
    user-select: none;
}

h1, h2{
    color: #666;
    line-height: 1rem;
    align-items: center;
}

h3 {
    color: #666;
    line-height: 0.9rem;
}


a {
    color: black;
}

p {
    text-align: justify;
    line-height: 1.5rem;
    margin-bottom: 3rem;
}

p:hover {
    border-bottom-color: #bbb3ff81;
}

#contact {
    margin-left: 0;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    padding: 1rem 0;
    border-left: 2px solid #f0f0f0;
    padding-left: 2rem;
    transition: border-color 0.2s ease;
}

#project {
    margin-left: 0;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    padding: 1rem 0;
    border-right: 2px solid #f0f0f0;
    padding-right: 2rem;
    transition: border-color 0.2s ease;
}

#contact:hover, #project:hover {
    border-left-color: #bbb3ff81;
    border-right-color: #bbb3ff81;
}

#contact h3, #project h3 {
    margin: 0 0 0.5rem 0;
    font-weight: 500;
    letter-spacing: 0.02em;
}

#contact a, #project a {
    font-size: 0.95rem;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.2s ease;
}

#contact a:hover, #project a:hover {
    opacity: 1;
}

#workspace {
    display: flex;
    flex-direction: row;
    gap: 13.9rem;
    align-items: stretch;
}

#me {
    width: 3.8rem;
    border-radius: 60px;
    aspect-ratio: 1/1;
    object-fit: cover;
}

#contact {
    display: flex;
}

/* Media queries pour mobile */
@media screen and (max-width: 768px) {
    body {
        padding: 0 1.5rem;
    }

    #workspace {
        flex-direction: column;
        gap: 2rem;
    }

    #contact, #project {
        border: none;
        border-top: 2px solid #f0f0f0;
        padding: 1.5rem 0;
        padding-left: 0;
        padding-right: 0;
        text-align: center;
    }

    #contact:hover, #project:hover {
        border-left-color: transparent;
        border-right-color: transparent;
        border-top-color: #bbb3ff81;
    }

    p {
        text-align: center;
        margin-bottom: 2rem;
    }

    #me {
        width: 4.5rem;
        margin: 0 auto 1.5rem auto;
        display: block;
    }

    h2 {
        text-align: center;
        margin-bottom: 1rem;
    }
}

@media screen and (max-width: 480px) {
    body {
        padding: 0 1rem;
    }

    #me {
        width: 4rem;
    }

    h2 {
        font-size: 1.3rem;
    }

    p {
        font-size: 0.95rem;
        line-height: 1.4rem;
    }

    #contact h3, #project h3 {
        font-size: 1rem;
    }

    #contact a, #project a {
        font-size: 0.9rem;
    }
}


</style>
